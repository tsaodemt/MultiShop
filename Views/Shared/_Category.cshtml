@model IEnumerable<CategoryViewModel>
<div class="nn-block">
    <div class="active">Danh mục sản phẩm</div>
    <div class="nav nav-pills nav-stacked">
        @foreach (var c in Model)
        {
            @c.Name
            foreach (var i in c.SubCategory)
            {
                <ul>
                    <li>
                        <a href="/Product/Category?CategoryID=@i.Id">
                            @i.Name
                        </a>
                    </li>
                </ul>
            }

        }
    </div>
</div><!--end block category-->